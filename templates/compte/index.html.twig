{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div
			class="main-body">
			<!-- /Breadcrumb -->
			<div class="row gutters-sm">
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="{{app.user.img}}" alt="Admin" class="rounded-circle" width="150">
								<div class="mt-3">
									<h4>{{app.user.firstname}}
										{{app.user.LastName}}
									</h4>
									<p class="text-muted font-size-sm">{{app.user.adr}}</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8">
					<div class="card mb-3">
						<div class="card-body">
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Prénom
									</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									{{app.user.firstname}}

								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Nom</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									{{app.user.LastName}}

								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Carte d'identité nationale</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									{{app.user.CIN}}
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Address Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									{{app.user.email}}
								</div>
							</div>

							<hr>
							<div class="row">
								<div class="col-sm-12">
									<a class="btn btn-info " target="__blank" href="{{path('app_compte_edit')}}">Modfication</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
