{% extends 'nav.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container mt-5"> 
  <h1>Liste des utilisateurs</h1>
    <table class="table mt-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Email</th>
                <th>CIN</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.CIN }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a type="button" class="btn btn-outline-primary" href="{{ path('app_user_show', {'id': user.id}) }}"><i class="bi bi-eye"></i></a>
                    <a type="button" class="btn btn-outline-primary" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-outline-primary" href="{{ path('app_register') }}">Créer un nouveau</a>
    </div>
{% endblock %}
