{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container mt-5 ">
		<h1>{{ user.firstname }} {{user.lastname}}</h1>

		<table class="table mt-2 border">
			<tbody class="border">
				<tr>
					<th>CIN</th>
					<td>{{ user.CIN }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>E-mail</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ user.adr }}</td>
				</tr>
				<tr>
					<th>Vérifié</th>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-outline-primary" href="{{ path('app_user_index') }}">Retour à la liste</a>

		<a class="btn btn-outline-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
