{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Note</h1>
    
    <table class="table">
        <tbody>
            <tr>
                <th>Nom d'étudiant</th>
                <td>{{ etudiant.nom }}</td>
            </tr>
            <tr>
            <th>Nom De Matiere</th>
            <td>{{matiere.designation}}</td>
            </tr>
            <tr>
                <th>Type d'épreuve</th>
                <td>{{ note.typedeepreuve }}</td>
            </tr>
            <tr>
                <th>Moyenne</th>
                <td>{{ note.moy }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_note_index') }}">Retour à la liste</a>

    <a class="btn btn-primary" href="{{ path('app_note_edit', {'id': note.id}) }}">Modifier</a>
        {{ include('note/_delete_form.html.twig') }}

</div>
{% endblock %}
