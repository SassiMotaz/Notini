{% extends 'base.html.twig' %}

{% block title %}Etudiants
{% endblock %}

{% block body %}
	<style></style>

	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<h1>
					Nos Étudiants
				</h1>
			</div>
			<div class="col">
				<form class="d-flex">
					<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-success" type="submit">Search</button>
				</form>
			</div>
			<div class="container">
				<div class="col">
					<a type="button" class="btn btn-success mt-2" href="{{path('app_new_etudiant')}}">Créer nouveau étudiant</a>
				</div>
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Code Inscrit</th>
							<th scope="col">Nom Etudiant</th>
							<th scope="col">Prenom Etudiant</th>
							<th scope="col">CIN Etudiant</th>
							<th scope="col">Email Etudiant</th>

						</tr>
					</thead>
					<tbody>
						{% for etudiant in etudiants %}
							<tr>
								<td>{{etudiant.codeins}}</td>
								<td>{{etudiant.nom}}</td>
								<td>{{etudiant.Prenom}}</td>
								<td>{{etudiant.CIN}}</td>
								<td>{{etudiant.email}}</td>
								<td>
									<a class="btn btn-outline-primary " href="{{path('app_show_etudiant' ,{'cin':etudiant.cin})}}">
										<i class="bi bi-eye"></i>
									</a>
									<a class="btn btn-outline-primary " href="{{path('app_edit_etudiant' ,{'cin':etudiant.cin})}}">
										<i class="bi bi-pencil-square"></i>
									</a>
									<a class="btn btn-outline-primary " href="{{path('app_delete_etudiant' ,{'cin':etudiant.cin})}}">
										<i class="bi bi-person-x"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% endblock %}
